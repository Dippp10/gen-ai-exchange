javascript
const express = require("express");
const bodyParser = require("body-parser");
const { Configuration, OpenAIApi } = require("openai");

const app = express();
app.use(bodyParser.json());
app.use(express.static("public")); // serve frontend

const configuration = new Configuration({
  apiKey: process.env.OPENAI_API_KEY,
});
const openai = new OpenAIApi(configuration);

// API endpoint
app.post("/generate-testcases", async (req, res) => {
  const { codeSnippet, language } = req.body;

  try {
    const prompt = `Generate 3 test cases (input + expected output) for the following ${language} code:\n\n${codeSnippet}`;
    const response = await openai.createCompletion({
      model: "text-davinci-003",
      prompt,
      max_tokens: 300,
      temperature: 0.5,
    });

    const result = response.data.choices[0].text.trim();
    res.json({ testCases: result });
  } catch (error) {
    console.error(error);
    res.status(500).json({ error: "Failed to generate test cases" });
  }
});

const PORT = process.env.PORT || 8080;
app.listen(PORT, () => console.log(`Server running on port ${PORT}`));


